{
  "useTabs": true,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-svelte",
    "prettier-plugin-organize-imports"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "plugins": [
          "prettier-plugin-svelte",
          "prettier-plugin-organize-imports",
          "prettier-plugin-tailwindcss"
        ],
        "tailwindStylesheet": "./src/frontend/src/lib/styles/global.scss",
        "parser": "svelte",
        "htmlWhitespaceSensitivity": "strict"
      }
    },
    {
      "files": "*.did",
      "options": {
        "plugins": [
          "prettier-plugin-svelte",
          "prettier-plugin-organize-imports",
          "prettier-plugin-motoko"
        ],
        "semi": false
      }
    }
  ]
}
