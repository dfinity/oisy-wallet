{
  "useTabs": true,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "plugins": [
    "prettier-plugin-svelte",
    "prettier-plugin-organize-imports"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": [
        "src/frontend/src/lib/**/*.svelte"
      ],
      "options": {
        "plugins": [
          "prettier-plugin-svelte",
          "prettier-plugin-organize-imports",
          "prettier-plugin-tailwindcss"
        ],
        "parser": "svelte"
      }
    }
  ]
}
