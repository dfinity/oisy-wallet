{
	"name": "@dfinity/oisy-wallet",
	"version": "0.0.19",
	"private": true,
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dfinity/oisy-wallet.git"
	},
	"bugs": {
		"url": "https://github.com/dfinity/oisy-wallet"
	},
	"scripts": {
		"build:compress": "./scripts/build.compress.sh",
		"build:csp": "node scripts/build.csp.mjs",
		"build:metadata": "node scripts/build.metadata.mjs",
		"build:copy-workers": "node ./scripts/build.copy-workers.mjs",
		"build:post-process": "npm run build:metadata && npm run build:csp && npm run build:copy-workers && npm run build:compress",
		"build:tokens-sns": "node scripts/build.tokens.sns.mjs",
		"build:tokens-ckerc20": "node scripts/build.tokens.ckerc20.mjs",
		"dev": "vite dev",
		"build": "tsc --noEmit && vite build && npm run build:post-process",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"cargo:test": "./scripts/test.backend.sh",
		"lint": "prettier --check './**/*.{ts,js,mjs,json,scss,css,svelte,html,md}' && eslint .",
		"format": "prettier --write './**/*.{ts,js,mjs,json,scss,css,svelte,html,md}'",
		"generate": "scripts/did.sh && dfx generate && node scripts/did.update.types.mjs && node scripts/did.delete.types.mjs && npm run format",
		"deploy": "scripts/deploy.sh",
		"i18n": "node scripts/i18n.mjs && prettier --write ./src/frontend/src/lib/types/i18n.d.ts"
	},
	"dependencies": {
		"@dfinity/agent": "^1.3.0",
		"@dfinity/auth-client": "^1.3.0",
		"@dfinity/candid": "^1.3.0",
		"@dfinity/ckbtc": "^2.4.0",
		"@dfinity/cketh": "^3.1.0",
		"@dfinity/gix-components": "^4.3.0",
		"@dfinity/ic-management": "^5.0.0",
		"@dfinity/ledger-icp": "^2.3.0",
		"@dfinity/ledger-icrc": "^2.3.2",
		"@dfinity/principal": "^1.3.0",
		"@dfinity/utils": "^2.3.0",
		"@junobuild/analytics": "^0.0.23",
		"@metamask/detect-provider": "^2.0.0",
		"@walletconnect/web3wallet": "^1.12.0",
		"alchemy-sdk": "^3.3.1",
		"buffer": "^6.0.3",
		"ethers": "^5.7.0",
		"idb-keyval": "^6.2.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@dfinity/identity-secp256k1": "^1.3.0",
		"@rollup/plugin-inject": "^5.0.5",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.5.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@testing-library/jest-dom": "^6.4.5",
		"@testing-library/svelte": "^5.1.0",
		"@types/node": "^20.14.1",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"autoprefixer": "^10.4.19",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-local-rules": "^2.0.1",
		"eslint-plugin-svelte": "^2.35.1",
		"jsdom": "^24.1.0",
		"pem-file": "^1.0.1",
		"postcss": "^8.4.38",
		"prettier": "^3.3.0",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.2.3",
		"sass": "^1.77.4",
		"svelte": "^4.2.17",
		"svelte-check": "^3.8.0",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.12",
		"vitest": "^1.6.0"
	},
	"type": "module"
}
