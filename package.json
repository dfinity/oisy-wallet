{
	"name": "@dfinity/oisy-wallet",
	"version": "0.0.11",
	"private": true,
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dfinity/oisy-wallet.git"
	},
	"bugs": {
		"url": "https://github.com/dfinity/oisy-wallet"
	},
	"scripts": {
		"build:compress": "./scripts/build.compress.sh",
		"build:csp": "node scripts/build.csp.mjs",
		"build:metadata": "node scripts/build.metadata.mjs",
		"build:copy-workers": "node ./scripts/build.copy-workers.mjs",
		"build:post-process": "npm run build:metadata && npm run build:csp && npm run build:copy-workers && npm run build:compress",
		"dev": "vite dev",
		"build": "tsc --noEmit && vite build && npm run build:post-process",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check './**/*.{ts,js,mjs,json,scss,css,svelte,html,md}' && eslint .",
		"format": "prettier --write './**/*.{ts,js,mjs,json,scss,css,svelte,html,md}'",
		"generate": "scripts/did.sh && dfx generate && node scripts/update.types.mjs && npm run format",
		"deploy": "scripts/deploy.sh"
	},
	"dependencies": {
		"@dfinity/agent": "^1.0.1",
		"@dfinity/auth-client": "^1.0.1",
		"@dfinity/candid": "^1.0.1",
		"@dfinity/ckbtc": "^2.3.1",
		"@dfinity/cketh": "^2.0.1",
		"@dfinity/gix-components": "^4.1.0",
		"@dfinity/ic-management": "^3.1.1",
		"@dfinity/ledger-icp": "^2.2.2",
		"@dfinity/ledger-icrc": "^2.2.1",
		"@dfinity/principal": "^1.0.1",
		"@dfinity/utils": "^2.1.3",
		"@junobuild/analytics": "^0.0.20",
		"@metamask/detect-provider": "^2.0.0",
		"@walletconnect/web3wallet": "^1.10.2",
		"alchemy-sdk": "^3.2.0",
		"buffer": "^6.0.3",
		"ethers": "^5.7.0",
		"idb-keyval": "^6.2.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@rollup/plugin-inject": "^5.0.5",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/node": "^20.11.28",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"autoprefixer": "^10.4.18",
		"dotenv": "^16.4.5",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.36",
		"prettier": "^3.2.5",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-svelte": "^3.2.2",
		"sass": "^1.72.0",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.7",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.4.2",
		"vite": "^5.1.6",
		"vitest": "^1.4.0"
	},
	"type": "module"
}
